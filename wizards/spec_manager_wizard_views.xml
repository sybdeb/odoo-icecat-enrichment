<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_spec_manager_wizard_form" model="ir.ui.view">
        <field name="name">spec.manager.wizard.form</field>
        <field name="model">spec.manager.wizard</field>
        <field name="arch" type="xml">
            <form string="Beheer Specificaties">
                <sheet>
                    <group>
                        <field name="product_id" invisible="1"/>
                    </group>
                    <field name="spec_line_ids" nolabel="1">
                        <list editable="bottom" create="false" delete="false">
                            <field name="to_delete" widget="boolean_toggle"/>
                            <field name="group_name" readonly="1"/>
                            <field name="spec_name" readonly="1"/>
                            <field name="spec_value" readonly="1"/>
                            <field name="spec_unit" readonly="1"/>
                        </list>
                    </field>
                </sheet>
                <footer>
                    <button string="Toepassen" type="object" name="action_apply" class="btn-primary"/>
                    <button string="Annuleren" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_spec_manager_wizard" model="ir.actions.act_window">
        <field name="name">Beheer Specificaties</field>
        <field name="res_model">spec.manager.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">fullscreen</field>
        <field name="binding_model_id" ref="product.model_product_template"/>
    </record>
</odoo>
