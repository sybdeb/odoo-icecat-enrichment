<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Cron Job: Sync New Products (runs every hour during day) -->
        <record id="ir_cron_sync_new_products" model="ir.cron">
            <field name="name">Icecat: Sync New Products</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">model.cron_sync_new_products()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
            <field name="priority">5</field>
        </record>

        <!-- Cron Job: Update Existing Products (runs daily at night - 2 AM) -->
        <record id="ir_cron_update_products" model="ir.cron">
            <field name="name">Icecat: Update Existing Products</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_products()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
            <field name="priority">10</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=2, minute=0, second=0)"/>
        </record>

    </data>
</odoo>
