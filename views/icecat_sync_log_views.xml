<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Icecat Sync Log Tree View -->
        <record id="icecat_sync_log_tree_view" model="ir.ui.view">
            <field name="name">icecat.sync.log.tree</field>
            <field name="model">icecat.sync.log</field>
            <field name="arch" type="xml">
                <list decoration-success="status == 'completed' and error_count == 0"
                      decoration-warning="status == 'completed' and error_count &gt; 0"
                      decoration-danger="status == 'failed'"
                      decoration-muted="status == 'running'">
                    <field name="create_date" string="Date"/>
                    <field name="sync_type"/>
                    <field name="status" widget="badge"
                           decoration-success="status == 'completed'"
                           decoration-danger="status == 'failed'"
                           decoration-info="status == 'running'"/>
                    <field name="total_products"/>
                    <field name="synced_count"/>
                    <field name="error_count"/>
                    <field name="no_data_count"/>
                    <field name="duration" widget="float_time"/>
                </list>
            </field>
        </record>

        <!-- Icecat Sync Log Form View -->
        <record id="icecat_sync_log_form_view" model="ir.ui.view">
            <field name="name">icecat.sync.log.form</field>
            <field name="model">icecat.sync.log</field>
            <field name="arch" type="xml">
                <form string="Sync Log" create="false" edit="false">
                    <header>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="sync_type"/>
                                <field name="start_time"/>
                                <field name="end_time"/>
                                <field name="duration" widget="float_time"/>
                            </group>
                            <group>
                                <field name="total_products"/>
                                <field name="synced_count"/>
                                <field name="error_count"/>
                                <field name="no_data_count"/>
                            </group>
                        </group>
                        <group string="Error Message" invisible="not error_message">
                            <field name="error_message" nolabel="1"/>
                        </group>
                        <notebook>
                            <page string="Verwerkte Producten" name="processed_products">
                                <field name="product_ids" nolabel="1">
                                    <list>
                                        <field name="default_code"/>
                                        <field name="name"/>
                                        <field name="icecat_sync_status" widget="badge"
                                               decoration-success="icecat_sync_status == 'synced'"
                                               decoration-danger="icecat_sync_status == 'error'"
                                               decoration-warning="icecat_sync_status == 'no_data'"/>
                                        <field name="icecat_last_sync"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Producten met Errors" name="error_products" invisible="error_count == 0">
                                <field name="error_product_ids" nolabel="1">
                                    <list>
                                        <field name="default_code"/>
                                        <field name="name"/>
                                        <field name="icecat_sync_status" widget="badge"
                                               decoration-danger="icecat_sync_status == 'error'"/>
                                        <field name="icecat_error_message"/>
                                        <field name="icecat_last_sync"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Icecat Sync Log Action -->
        <record id="action_icecat_sync_log" model="ir.actions.act_window">
            <field name="name">Icecat Sync Logs</field>
            <field name="res_model">icecat.sync.log</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No synchronization logs yet
                </p>
                <p>
                    Sync logs will appear here after automatic or manual synchronization runs.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_icecat_root"
                  name="Icecat"
                  parent="sale.sale_menu_root"
                  sequence="100"/>

        <menuitem id="menu_icecat_sync_log"
                  name="Sync Logs"
                  parent="menu_icecat_root"
                  action="action_icecat_sync_log"
                  sequence="10"/>

    </data>
</odoo>
